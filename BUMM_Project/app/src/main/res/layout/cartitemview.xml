<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:padding="4dp"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/listviewitembackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgKategorie"
            android:layout_width="120dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/listviewimg" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <EditText
            android:id="@+id/txtProduktName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="false"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="cursive"
            android:inputType="text"
            android:text="iPhone 6"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtArtikelNr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:textColor="@color/white"
            android:text="Article Nr:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtAufLager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="15sp"
            android:text="on Stock:"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">
        <TextView
            android:id="@+id/txtDescHeadline"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="Description:"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

            <Spinner
                android:id="@+id/countOrder"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.47"
                android:textAlignment="viewEnd"
                android:visibility="visible"></Spinner>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/isChecked"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="15sp"
            android:layout_weight="0.20"
            android:lines="5"
            android:textColor="@color/white"
            android:text="This is a plain Description to show how the multiline is working. We have to write very much so we can test it.... it's super booooring you. have to know that's so exhausting"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
