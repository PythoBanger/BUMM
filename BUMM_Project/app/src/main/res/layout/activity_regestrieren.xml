<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.pupil.buum.RegestrierenActivity">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_marginTop="-15dp"
        app:srcCompat="@drawable/register"
        android:layout_above="@+id/txtVorname"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:contentDescription="Headline" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="@string/usernameReg"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtVorname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtUsername"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_firstname"
        android:ems="10"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtNachname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtVorname"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_lastname"
        android:ems="10"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNachname"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtStrasse"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtEmail"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_adress"
        android:ems="10"
        android:hint="@string/street"
        android:inputType="text"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtPLZ"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtStrasse"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_zipcode"
        android:ems="10"
        android:hint="@string/zip_code"
        android:inputType="number"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtOrt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtPLZ"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_place"
        android:ems="10"
        android:hint="@string/place"
        android:inputType="text"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtGeburtstag"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtOrt"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_birthdate"
        android:ems="10"
        android:hint="@string/date_of_birth"
        android:inputType="date"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtPasswort"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtGeburtstag"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_regpassword"
        android:ems="10"
        android:hint="@string/passwordReg"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/txtPasswortWH"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtPasswort"
        android:background="@null"
        android:drawableLeft="@drawable/ic_action_regpasswordrep"
        android:ems="10"
        android:hint="@string/repeat_password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:maxLines="1" />

    <android.support.v7.widget.CardView
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtPasswortWH"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorButtonBumm"
        app:cardCornerRadius="25dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/register"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btnBack"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtPasswortWH"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorButtonBumm"
        app:cardCornerRadius="25dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtRegBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/back"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
