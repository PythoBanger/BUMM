<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    tools:context="com.example.pupil.buum.KontoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/headlineAcc"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/my_account" />

        <EditText
            android:id="@+id/txtVorname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="105dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtUsername"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_firstname"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtNachname"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtVorname"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_lastname"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtStrasse"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNachname"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_adress"
            android:ems="10"
            android:hint="Street"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtPLZ"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_below="@+id/txtStrasse"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_action_zipcode"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtOrt"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtPLZ"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_place"
            android:ems="10"
            android:hint="Place"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtOldPasswort"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtOrt"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_regpassword"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtPasswort"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtOldPasswort"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_regpasswordrep"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtPasswortWH"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtPasswort"
            android:background="@null"
            android:drawableLeft="@drawable/ic_action_regpasswordrep"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Repeat New Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/btnSaveChanges"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPasswortWH"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonBumm"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/change"
                    android:textColor="#fff" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btnDeleteAccount"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtPasswortWH"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorButtonBumm"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtRegBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/deleteAcc"
                    android:textColor="#fff" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/nav_menu"
        android:id="@+id/navigation"
        style="@style/AppTheme"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
